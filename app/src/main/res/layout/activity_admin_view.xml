<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AdminView"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_aproving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Potwierdź"
            android:backgroundTint="@color/teal_200"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editText_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Wprowadź \nstawkę"
            android:text="16"
            android:textSize="12sp"
            android:padding="10dp"/>
    <Button
        android:id="@+id/btn_data_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Wybierz datę"
        android:backgroundTint="@color/teal_700"
        android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_picked_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:padding="10dp"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pracownik"
            android:gravity="center"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/worker_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czas"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/worker_money_toWithdrawn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ile zł do \nwypłacenia"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/worker_money_withdrawn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ile \nwypłacono"/>
        <TextView
            android:id="@+id/worker_money_earn_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ogólnie zarobiono"
            android:padding="10dp"/>
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCardy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    </LinearLayout>

