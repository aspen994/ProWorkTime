<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Subs">

    <TextView
        android:id="@+id/subs_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connecting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/title_monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Subscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subs_status"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/title_no_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No ads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_monthly"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_get_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_no_ads"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_getPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Price"
        app:layout_constraintTop_toBottomOf="@+id/tv_get_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/btn_subscribe"
        android:text="Subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_getPrice"
        />

    <Button
        android:id="@+id/btn_quit"
        android:text="QUIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_subscribe"
        android:layout_marginTop="24dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>