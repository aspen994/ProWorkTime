<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.UserOverall">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statystyki: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="170dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pracownik: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Szymon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czas ogólnie: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="500 h" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktualny miesiąc: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="160 h" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktualny dzień: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8 h" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pieniądze do wypłaty: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2zł" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wypłacone pieniądze: " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10 zł" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DD0707"
        android:text="wypłać"
        android:layout_marginLeft="170dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>